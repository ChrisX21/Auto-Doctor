@model AutoDoctor.Web.ViewModels.Marketplace.OfferDetailsViewModel

@{
    ViewData["Title"] = "Create Offer";
}

<h1>Create Offer</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Part.Id" class="control-label">Part</label>
        <select asp-for="Part.Id" class="form-control" asp-items="@(new SelectList(Model.Parts, "Id", "Name"))"></select>
        <span asp-validation-for="Part.Id" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
