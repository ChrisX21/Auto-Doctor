@model AutoDoctor.Web.ViewModels.Marketplace.OfferDetailsViewModel

@{
    ViewData["Title"] = "Create Offer";
}

<h1 class="text-center mb-4">Create Offer</h1>

<div class="container d-flex justify-content-center">
    <div class="card p-4 shadow" style="max-width: 600px; width: 100%;">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Part.Id" class="control-label">Part</label>
                <select asp-for="Part.Id" class="form-control" asp-items="@(new SelectList(Model.Parts, "Id", "Name"))"></select>
                <span asp-validation-for="Part.Id" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-2">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
