@model AutoDoctor.Web.ViewModels.Marketplace.OfferDetailsViewModel

@{
    ViewData["Title"] = "Edit Offer";
}

<h2>Edit Offer</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OfferId" />
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Part.Name" class="control-label"></label>
        <input asp-for="Part.Name" class="form-control" />
        <span asp-validation-for="Part.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Part.ImageUrl" class="control-label"></label>
        <input type="file" asp-for="Part.ImageUrl" class="form-control" />
        <span asp-validation-for="Part.ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Part.Price" class="control-label"></label>
        <input asp-for="Part.Price" class="form-control" />
        <span asp-validation-for="Part.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="All" asp-controller="Marketplace">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
