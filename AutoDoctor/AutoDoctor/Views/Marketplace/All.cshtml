@using Microsoft.AspNetCore.Identity
@model IEnumerable<AutoDoctor.Web.ViewModels.Marketplace.AllOffersViewModel>
@inject SignInManager<ApplicationUser> _signInManager
@inject UserManager<ApplicationUser> _userManager

@{
    ViewData["Title"] = "Marketplace";
}

<h2 class="text-center mb-4">All Offers</h2>

<div class="row">
    @foreach (var offer in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <a href="@Url.Action("Details", "Marketplace", new { id = offer.OfferId })">
                    <img src="@Html.Raw(offer.Part.ImageUrl)" class="card-img-top" alt="Product image">
                </a>
                <div class="card-body">
                    <h5 class="card-title">@offer.Part.Name</h5>
                    <p class="card-text">Price: @offer.Part.Price</p>
                    <p class="card-text">Manufacturer: @offer.Part.Manufacturer.UserName</p>
                    @if (_signInManager.IsSignedIn(User))
                    {
                        var user = await _userManager.GetUserAsync(User);
                        if(await _userManager.IsInRoleAsync(user, "Admin") || await _userManager.IsInRoleAsync(user, "Seller"))
                        {
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Edit", "Marketplace", new { id = offer.Part.Id })" class="btn btn-primary">Edit</a>
                                <a href="@Url.Action("Delete", "Marketplace", new { id = offer.Part.Id })" class="btn btn-danger">Delete</a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    }
</div>
