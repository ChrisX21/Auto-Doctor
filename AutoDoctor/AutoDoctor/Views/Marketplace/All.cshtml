@model IEnumerable<AutoDoctor.Web.ViewModels.Marketplace.AllOffersViewModel>

@{
    ViewData["Title"] = "Marketplace";
}

<h2>All Offers</h2>
<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Part Name</th>
            <th>Price</th>
            <th>User</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var offer in Model)
        {
            <tr>
                <td>@offer.Description</td>
                <td>@offer.Part.Name</td>
                <td>@offer.Part.Price</td>
                <td>@offer.Part.User.UserName</td> 
            </tr>
        }

    </tbody>
</table>