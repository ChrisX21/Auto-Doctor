@model AutoDoctor.Web.ViewModels.Marketplace.OfferDetailsViewModel

@{
    ViewData["Title"] = "Offer Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Part.ImageUrl" alt="Product image" class="img-fluid">
        </div>
        <div class="col-md-8">
            <h1>@Model.Part.Name</h1>
            <p>@Model.Description</p>
            <h3 class="card-text">Price: @string.Format("{0:C}", @Model.Part.Price)</h3>
            <p><strong>Manufacturer:</strong> @Model.Manufacturer.UserName</p>
            <p><strong>Views:</strong> @Model.Views</p>
            <a href="#" class="btn btn-primary">Buy</a>
        </div>
    </div>
</div>
